{
	"name": "@thisux/sveltednd",
	"version": "0.0.20",
	"private": false,
	"description": "A lightweight, flexible drag and drop library for Svelte 5 applications.",
	"author": "sanju <work@sanju.sh>",
	"contributors": [
		"sanju <work@sanju.sh>"
	],
	"license": "MIT",
	"keywords": [
		"svelte",
		"drag",
		"drop",
		"dnd",
		"drag-and-drop",
		"typescript",
		"svelte5"
	],
	"scripts": {
		"dev": "vite dev",
		"dev:host": "vite dev --host",
		"build": "vite build && bun run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "bun run package",
		"publish": "bun run build && bun publish",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "bun run test:unit -- --run"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-cloudflare": "^5.0.0",
		"@sveltejs/kit": "^2.15.1",
		"@sveltejs/package": "^2.3.7",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.16.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^15.13.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.2",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"publint": "^0.2.12",
		"svelte": "^5.16.1",
		"svelte-check": "^4.1.1",
		"tailwindcss": "^3.4.16",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.18.0",
		"vite": "^6.0.7",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@thisux/sveltednd": "^0.0.18"
	}
}